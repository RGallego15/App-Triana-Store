<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F4F6F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- BOTÓN PRINCIPAL -->
        <Button
            android:id="@+id/btnVentas"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/button_style"
            android:text="Ventas"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- TEXTO PRINCIPAL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Bienvenido"
            android:textColor="#222"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- IMÁGENES CON FONDO & ESTILO -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/image_background"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/win_11" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="74dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/image_background"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/eset" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="230dp"
            android:layout_height="82dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/image_background"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/office_2019" />

        <!-- IMÁGENES SIN ESTILO -->
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="119dp"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/iphone" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="121dp"
            android:layout_height="64dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/samsung" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/xiaomi" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/gamming" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="178dp"
            android:layout_height="68dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/motorola" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="121dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/msi" />

    </LinearLayout>
</ScrollView>
